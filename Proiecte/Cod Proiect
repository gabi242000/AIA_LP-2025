package proiect;

import java.util.ArrayList;
import java.util.Scanner;

public class Proiect {
    public static void main(String[] args) {
        GestionareMagazin administrator = new GestionareMagazin();
        Scanner scanner = new Scanner(System.in);
        boolean ruleaza = true;

        System.out.println("Aplicație de gestionare a unui magazin");

        while (ruleaza) {
            System.out.println("\n    MENIU PRINCIPAL");
            System.out.println("1. Adaugă Produs");
            System.out.println("2. Vizualizează Stoc");
            System.out.println("3. Vinde Produs");
            System.out.println("4. Șterge Produs");
            System.out.println("5. Ieșire");
            System.out.print("Alegeți o opțiune: ");

            int optiune = scanner.nextInt();

            switch (optiune) {
                case 1:
                    System.out.print("ID: "); int id = scanner.nextInt();
                    scanner.nextLine(); 
                    System.out.print("Nume: "); String nume = scanner.nextLine();
                    System.out.print("Preț: "); double pret = scanner.nextDouble();
                    System.out.print("Cantitate: "); int cantitate = scanner.nextInt();
                    
                    administrator.adaugaProdus(new Produs(id, nume, pret, cantitate));
                    System.out.println("Produs adăugat cu succes!");
                    break;

                case 2:
                    System.out.println("\n        LISTĂ PRODUSE");
                    if (administrator.obtineProdusele().isEmpty()) {
                        System.out.println("Stocul este gol.");
                    } else {
                        for (Produs p : administrator.obtineProdusele()) {
                            System.out.println(p);
                        }
                    }
                    break;

                case 3:
                    System.out.print("Introduceți ID-ul produsului: ");
                    int idVanzare = scanner.nextInt();
                    System.out.print("Cantitate de vândut: ");
                    int cantitateVanzare = scanner.nextInt();
                    
                    if (administrator.vindeProdus(idVanzare, cantitateVanzare)) {
                        System.out.println("Vânzare finalizată!");
                    } else {
                        System.out.println("Eroare: Stoc insuficient sau ID inexistent.");
                    }
                    break;

                case 4:
                    System.out.print("Introduceți ID-ul produsului de șters: ");
                    int idSters = scanner.nextInt();
                    if (administrator.stergeProdus(idSters)) {
                        System.out.println("Produsul a fost șters din sistem.");
                    } else {
                        System.out.println("Eroare: Produsul cu ID-ul " + idSters + " nu a fost găsit.");
                    }
                    break;

                case 5:
                    System.out.println("Închidere aplicație");
                    ruleaza = false;
                    break;
                
                default:
                    System.out.println("Opțiune invalidă!");
            }
        }
        scanner.close();
    }
}


class GestionareMagazin {
    private ArrayList<Produs> inventar = new ArrayList<>();

    public void adaugaProdus(Produs p) {
        inventar.add(p);
    }

    public boolean stergeProdus(int id) {
        for (int i = 0; i < inventar.size(); i++) {
            if (inventar.get(i).obtineId() == id) {
                inventar.remove(i);
                return true;
            }
        }
        return false;
    }

    public ArrayList<Produs> obtineProdusele() {
        return inventar;
    }

    public Produs gasesteProdus(int id) {
        for (Produs p : inventar) {
            if (p.obtineId() == id) return p;
        }
        return null;
    }

    public boolean vindeProdus(int id, int suma) {
        Produs p = gasesteProdus(id);
        if (p != null && p.obtineCantitate() >= suma) {
            p.seteazaCantitate(p.obtineCantitate() - suma);
            return true;
        }
        return false;
    }
}


class Produs {
    private int id;
    private String nume;
    private double pret;
    private int cantitate;

    public Produs(int id, String nume, double pret, int cantitate) {
        this.id = id;
        this.nume = nume;
        this.pret = pret;
        this.cantitate = cantitate;
    }

    public int obtineId() { return id; }
    public String obtineNume() { return nume; }
    public int obtineCantitate() { return cantitate; }
    public void seteazaCantitate(int cantitate) { this.cantitate = cantitate; }

    @Override
    public String toString() {
        return "ID: " + id + " | Nume: " + nume + " | Preț: " + pret + " lei | Stoc: " + cantitate;
    }
}
