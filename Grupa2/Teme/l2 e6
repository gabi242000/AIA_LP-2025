#include "stdio.h"
int main() {
    float pret;
    int cod;
    printf("Introdu pretul produsului: ");
    scanf("%f", &pret);
    printf("Introdu codul de reducere: ");
    scanf("%d", &cod);
    if(cod == 1) {
        printf("Pretul dupa reducere este %.2f\n", pret - pret * 0.1);
    } else if(cod == 2) {
        printf("Pretul dupa reducere este %.2f\n", pret - pret * 0.2);
    } else if(cod == 3) {
        printf("Pretul dupa reducere este %.2f\n", pret - pret * 0.3);
    } else printf("Codul de reducere este incorect!\n");

    return 0;
}
