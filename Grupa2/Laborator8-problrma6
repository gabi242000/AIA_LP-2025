#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    char *sir1, *sir2, *concatenat;
    int l1, l2;

    printf("Lungimea primului sir: ");
    scanf("%d", &l1);
    getchar(); // consumÄƒm newline
    sir1 = (char *)malloc((l1 + 1) * sizeof(char));
    printf("Introdu primul sir: ");
    fgets(sir1, l1 + 1, stdin);

    printf("Lungimea celui de-al doilea sir: ");
    scanf("%d", &l2);
    getchar();
    sir2 = (char *)malloc((l2 + 1) * sizeof(char));
    printf("Introdu al doilea sir: ");
    fgets(sir2, l2 + 1, stdin);

    concatenat = (char *)malloc((l1 + l2 + 1) * sizeof(char));
    strcpy(concatenat, sir1);
    strcat(concatenat, sir2);

    printf("Sirul concatenat: %s\n", concatenat);

    free(sir1);
    free(sir2);
    free(concatenat);
    return 0;
}
