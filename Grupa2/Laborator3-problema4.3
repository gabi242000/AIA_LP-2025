#include <stdio.h>

int main() {
    int N, i, j, spatii;

    printf("Introduceti numarul de randuri pentru piramida: ");
    scanf("%d", &N);

    for(i = 1; i <= N; i++) {
        for(spatii = 1; spatii <= N - i; spatii++) {
            printf(" ");
        }

        for(j = 1; j <= 2 * i - 1; j++) {
            printf("*");
        }

        printf("\n");
    }

    return 0;
}
