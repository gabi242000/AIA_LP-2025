
#include <stdio.h>

int main()
{
    int n;
    scanf("%d",&n);
    int a[n][n];
    int sumarand[n];
    int randmax=0;
    int max=0;
    
    for (int i = 0; i < n; i++) {
        sumarand[i] = 0;
    }
    
    for(int i=0;i<n;i++)
        for(int j=0;j<n;j++){
            scanf("%d",&a[i][j]);
            sumarand[i]+=a[i][j];
        }
        
    for (int i=0;i<n;i++) {
        if (sumarand[i] > max) {
            max=sumarand[i];
            randmax=i;
        }
    }
            
    printf("Suma maximă a rândului este: %d\n", max);
    printf("Rândul cu suma maximă este: %d\n", randmax);
    return 0;
}
