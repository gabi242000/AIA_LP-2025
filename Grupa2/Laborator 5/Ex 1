#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    char sir[100];
    printf("Introduceti sirul: ");
    fgets(sir, 100, stdin);
    
    int len = strlen(sir);
    if (len > 0 && sir[len - 1] == '\n') {
        sir[len - 1] = '\0';
    }

    for (int i = 0; sir[i] != '\0'; i++) {
        if (islower(sir[i])) {
            sir[i] = toupper(sir[i]);
        }
        printf("%c", sir[i]);
    }
    printf("\n"); 

    return 0;
}
