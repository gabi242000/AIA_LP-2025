#include <stdio.h>

int main()
{
    float s_brut,s_net;
    char t_contr;
    printf("salariul brut: ");
    scanf("%f",&s_brut);
    printf("tipul contractului: ");
    printf("Cod 1: Salariu pentru angajat full-time (25%% impozit)\n");
    printf("Cod 2: Salariu pentru contract de colaborare (10%% impozit)\n");
    printf("Cod 3: Salariu pentru PFA (5%% impozit)\n");
    scanf(" %c",&t_contr);
    switch(t_contr)
    {
        case '1':
            s_net=s_brut-(s_brut*0.25);
            printf("salariul net: %f",s_net);
            break;
        case '2':
            s_net=s_brut-(s_brut*0.1);
            printf("salariul net: %f",s_net);
            break;
        case '3':
            s_net=s_brut-(s_brut*0.05);
            printf("salariul net: %f",s_net);
            break;
        default:
            printf("eroare: cod invalid");
            break;
    }
    return 0;
}
