Ex 1: 
import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class VectorElementePare {

    
    public static int[] citireVector(int dimensiune, BufferedReader reader) throws IOException {
        int[] vector = new int[dimensiune];
        for (int i = 0; i < dimensiune; i++) {
            System.out.print("Elementul [" + i + "]: ");
            vector[i] = Integer.parseInt(reader.readLine());
        }
        return vector;
    }

    
    public static int sumaElementePare(int[] vector) {
        int suma = 0;
        System.out.print("Elemente pare din vector: ");
        boolean existaPare = false;

        for (int numar : vector) {
            if (numar % 2 == 0) {
                System.out.print(numar + " ");
                suma += numar;
                existaPare = true;
            }
        }

        if (!existaPare) {
            System.out.print("Nu există elemente pare.");
        }
        System.out.println(); 
        return suma;
    }

    public static void main(String[] args) {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));

        try {
            System.out.print("Introduceți dimensiunea vectorului: ");
            int dim = Integer.parseInt(reader.readLine());

            if (dim <= 0) {
                System.out.println("Dimensiunea trebuie să fie un număr pozitiv.");
                return;
            }

            
            int[] vector = citireVector(dim, reader);

            
            int sumaPare = sumaElementePare(vector);
            System.out.println("Suma elementelor pare: " + sumaPare);

        } catch (NumberFormatException e) {
            System.out.println("Ați introdus un număr invalid.");
        } catch (IOException e) {
            System.out.println("Eroare la citirea de la tastatură.");
        }
    }
}    

Ex 2: 
import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class CifreMaxMin {
    public static void main(String[] args) {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));

        try {
            System.out.print("Introduceți un număr natural: ");
            String input = reader.readLine();

            
            if (!input.matches("\\d+")) {
                System.out.println("Valoarea introdusă nu este un număr natural valid.");
                return;
            }

            int numar = Integer.parseInt(input);  
            
            int cifraMax = 0;
            int cifraMin = 9;

            while (numar > 0) {
                int cifra = numar % 10;
                if (cifra > cifraMax) cifraMax = cifra;
                if (cifra < cifraMin) cifraMin = cifra;
                numar /= 10;
            }

            System.out.println("Cifra maximă: " + cifraMax);
            System.out.println("Cifra minimă: " + cifraMin);

        } catch (IOException e) {
            System.out.println("Eroare la citirea de la tastatură.");
        }
    }
}
