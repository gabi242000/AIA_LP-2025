package tema2;

import java.io.*;
import java.math.*;
import java.util.Scanner;

import static java.lang.System.out;

public class Ex1 {

    public static void citireVector(int[] v) {
        Scanner sc = new Scanner(System.in);
        for (int i = 0; i < v.length; i++) {
                v[i] = sc.nextInt();
        }
    }

    public static void sumPare(int[] v) {
        int sum = 0;
        System.out.print("Elementele pare sunt: ");
        for (int i = 0; i < v.length; i++) {
            if(v[i]%2 == 0) {
                System.out.print(v[i] + " ");
                sum += v[i];
            }
        }
        System.out.println();
        System.out.println("Suma elementelor pare este: " + sum);
    }

    public static void main(String[] args){
       Scanner scan = new Scanner(System.in);
       System.out.println("Introduceti dimensiunea vectorului");
       int n = scan.nextInt();


       int[] vector =  new int[n];

       citireVector(vector);
       sumPare(vector);


    }
}
