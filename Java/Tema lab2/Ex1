package Tema2;

import java.io.*;

public class Ex1 {
    
    public static int[] citireVector(BufferedReader br) throws IOException {
        System.out.print("Introduceti dimensiunea vectorului: ");
        int n = Integer.parseInt(br.readLine());
        int[] v = new int[n];
        
        for (int i = 0; i < n; i++) {
            System.out.print("v[" + i + "] = ");
            v[i] = Integer.parseInt(br.readLine());
        }
        return v;
    }

    public static int sumaPare(int[] v) {
        int suma = 0;
        System.out.print("Elementele pare sunt: ");
        for (int x : v) {
            if (x % 2 == 0) {
                System.out.print(x + " ");
                suma += x;
            }
        }
        System.out.println();
        return suma;
    }

    public static void main(String[] args) throws IOException {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        
        int[] vector = citireVector(br);
        int suma = sumaPare(vector);
        
        System.out.println("Suma elementelor pare este: " + suma);
    }
}
