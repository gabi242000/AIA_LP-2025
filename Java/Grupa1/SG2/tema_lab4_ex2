package lab4tema;
import java.util.Scanner;

public class Masina {
	private String marca;
	private String model;
	private int an_fabricare;
	private String culoare;
	private double pret;
	public Masina(String marca, String model, int an_fabricare, String culoare, double pret) {
		this.marca= marca;
		this.model=model;
		this.an_fabricare=an_fabricare;
		this.culoare=culoare;
		this.pret=pret;
	}
public void afisareMasina() {
	System.out.println("Marca: "+ marca);
	System.out.println("Model: "+ model);
	System.out.println("An fabricare: "+ an_fabricare);
	System.out.println("Culoarea: : "+ culoare);
	System.out.println("Pretul: "+ pret);
	
}
public static void main(String [] args) {
	Scanner sc= new Scanner(System.in);
	System.out.println("Introduceti marca: ");
	
	String marca=sc.nextLine();
	System.out.println("Introduceti modelul: ");
	String model=sc.nextLine();
	
	System.out.println("Introduceti anul fabricarii: ");
	int an_fabricare=sc.nextInt();
	sc.nextLine();
	
	System.out.println("Introduceti culoarea: ");
	String culoare=sc.nextLine();
	
	System.out.println("Introduceti pretul: ");
	double pret=sc.nextDouble();
	
	Masina m= new Masina(marca,model,an_fabricare,culoare,pret);
	System.out.println("\n Datele masinii: ");
	m.afisareMasina();
}
}


