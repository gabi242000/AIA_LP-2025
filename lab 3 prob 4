4.1
#include <stdio.h>

int main() {
    int N;
    printf("Introd nr N: ");
    scanf("%d", &N);

    for (int i = 2; i <= N; i += 2) {
        printf("%d ", i);
    }
    
    printf("\n");
    return 0;
}

4.2
#include <stdio.h>

int main() {
    int N;
    printf("Introd nr N: ");
    scanf("%d", &N);

    int a = 0, b = 1, temp;
    
    for (int i = 0; i < N; i++) {
        printf("%d ", a);
        temp = a + b;
        a = b;
        b = temp;
    }
    
    printf("\n");
    return 0;
}

4.3
#include <stdio.h>

int main() {
    int N;
    printf("Introd nr N: ");
    scanf("%d", &N);

    for (int i = 1; i <= N; i++) {
        for (int j = 0; j < N - i; j++) {
            printf(" ");
        }
        for (int j = 0; j < 2 * i - 1; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}

