#include<stdio.h>

int main(){
  int cod;
  float pret;
  printf("Introduceti un pret: \n");
  scanf("%f",&pret);
  printf("Introduceti un cod de reducere (1 pentru 10%, 2 pentru 20%, 3 pentru 30%): \n");
  scanf("%d",&cod);
  switch(cod){
    case 1:printf("%0.2f",pret-(pret/10));break;
    case 2:printf("%0.2f",pret-((2*pret)/10));break;
    case 3:printf("%0.2f",pret-((3*pret)/10));break;
    default:printf("introducerea este invalida!");break;
  }
}
